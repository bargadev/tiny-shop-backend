FROM node:18-alpine

WORKDIR /app

# Install netcat for health check
RUN apk add --no-cache netcat-openbsd

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Copy scripts
COPY scripts/simple-start.sh ./scripts/
RUN chmod +x ./scripts/simple-start.sh

# Expose port
EXPOSE 3000

# Use simple start script (migrations via init.sql)
CMD ["./scripts/simple-start.sh"]
